<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_page"
    tools:context="com.example.nemanja.mychat.StartPageActivity"
    android:id="@+id/ListLayout">



    <Button
        android:id="@+id/already_have_account_button"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_above="@+id/need_account_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@drawable/sign_in_background"
        android:padding="10dp"
        android:text=" Already have an account?"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:transitionName="loginTransition"/>

    <Button
        android:id="@+id/need_account_button"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/already_have_account_button"
        android:layout_marginBottom="34dp"
        android:background="@drawable/sign_in_background"
        android:padding="10dp"
        android:text="Need New Account?"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:transitionName="registerTransition"/>

    <ImageView
        android:id="@+id/start_page_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        app:srcCompat="@mipmap/mychat"
        android:transitionName="imageTransition"/>
</RelativeLayout>
